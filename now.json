{
  "version": 2,
  "name": "login-service",
  "alias": "loginservice.danieltrevino.se",
  "regions": ["arn1"],
  "builds": [
    { "src": "server/index.ts", "use": "@now/node@canary" },
    { "src": "client/package.json", "use": "@now/next" }
  ],
  "routes": [
    {
      "src": "/graphql",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ],
  "env": {
    "MONGO_DATABASE_URL": "@login-service-mongodb",
    "APP_SECRET": "@app-secret",
    "EMAIL_HOST": "@login-service-email-host",
    "EMAIL_USER": "@login-service-email-user",
    "EMAIL_PASSWORD": "@login-service-email-password",
    "EMAIL_SENDER": "@login-service-email-sender"
  }
}
