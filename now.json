{
  "version": 2,
  "name": "login-service",
  "alias": "loginservice.danieltrevino.se",
  "regions": ["arn1"],
  "builds": [
    { "src": "server/index.ts", "use": "@now/node@canary" },
    { "src": "client/package.json", "use": "@now/next" }
  ],
  "routes": [
    {
      "src": "/graphql",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ],
  "env": {
    "DATABASE_URL": "@login-service-mongodb"
  }
}
